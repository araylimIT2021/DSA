public class Factorial {
    public static void main(String[] args) {
        System.out.println(sum(5));
    }
    static int factorial (int n){
        if(n <= 1){
            return 1;
        }
        return n * factorial(n-1);
    }
    //sum of n numbers
    static int sum(int n){
        if(n <= 1){
            return n;
        }
        return n + sum(n-1);
    }
}
